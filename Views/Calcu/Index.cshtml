

@model Calculator.Models.Calcu
@{
    ViewBag.Title = "Index";
}

<html>
<head>

</head>
<body>
    <h2 class="text-success text-center font-weight-bold">Simple calculator</h2>

    <div class="row text-danger ">
        @using (Html.BeginForm("/Index", "Calcu", FormMethod.Post))
        {
            <div class="form-group">
                <label for="Num1">Number1</label>
                <input type="text" class="form-control" name="Num1" value="@Model.Num1" />
            </div>

            <div class="form-group">
                <label for="Num1">Number2</label>
                <input type="text" class="form-control" name="Num2" value="@Model.Num2" />
            </div>

            <div class="form-group">
                <label for="Op">=</label>
                <input type="text" class="form-control" name="Op" value="@Model.Op" />
            </div>

            <button class="btn-info" type="submit" id="add" value="add" name="Calculate">+</button>

            <button class="btn-success" type="submit" id="min" value="min" name="Calculate">-</button>

            <button class="btn-danger" type="submit" id="sub" value="sub" name="Calculate">*</button>

            <button class="btn-warning" type="submit" id="div" value="div" name="Calculate">/</button>

        }
    </div>
</body>


</html>
